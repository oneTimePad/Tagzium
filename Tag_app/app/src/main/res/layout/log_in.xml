<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/username_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="username"
        android:layout_above="@+id/password_in"
        android:layout_alignRight="@+id/password_in"
        android:layout_alignEnd="@+id/password_in"
        android:layout_marginBottom="48dp" />


    <EditText
        android:id="@+id/password_in"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="password"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/button"
        android:layout_below="@+id/password_in"
        android:layout_centerHorizontal="true"
        android:onClick="login_confirm"/>


</RelativeLayout>