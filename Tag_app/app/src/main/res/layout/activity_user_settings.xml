<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tagger.lie.tag_app.UserSettingsActivity"
    android:id="@+id/settings"
    android:title="@string/action_settings">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/change_password"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change username"
        android:id="@+id/change_username"
        android:layout_below="@+id/change_password"
        android:layout_alignRight="@+id/change_password"
        android:layout_alignEnd="@+id/change_password"
        android:layout_alignLeft="@+id/change_password"
        android:layout_alignStart="@+id/change_password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change email"
        android:id="@+id/change_email"
        android:layout_below="@+id/change_username"
        android:layout_alignLeft="@+id/change_username"
        android:layout_alignStart="@+id/change_username"
        android:layout_alignRight="@+id/change_username"
        android:layout_alignEnd="@+id/change_username" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change name"
        android:id="@+id/change_name"
        android:layout_below="@+id/change_email"
        android:layout_alignLeft="@+id/change_email"
        android:layout_alignStart="@+id/change_email"
        android:layout_alignRight="@+id/change_email"
        android:layout_alignEnd="@+id/change_email" />
</RelativeLayout>
